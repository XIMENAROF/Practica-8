/*2.-algoritmo para determinar cuánto se debe pagar por equis cantidad de lápices
considerando que si son 1000 o más el costo es de 85¢, de lo contrario, el precio es de
90¢.*/
#include<stdio.h>   //Libreria
int main(){         //funcion principal
int lapices,total; //variables
//INICIO

printf("Ingrese la cantidad de lapices que compro\n");
scanf("%i", &lapices);
  
      if(lapices>=1000){
         total=(lapices*0.85);
         printf("Usted debe pagar $ %i",total);
       }
       else {
       	  total=lapices*.90;
       	  printf("Usted debe pagar $ %i",total);
       	
	   }
return 0;
	
}
